<section class="news actions gradient_blue">
    <h3 class="news_title">Акции</h3>
    <div class="all_news_block">
        {% if news %}
            {% for a in news %}
                {% set i=0 %}
                {% if a.type == 'actions' %}
                    {% if i == 0 %}
                        <div class="news_block">
                            <div class="news_image">
                                <img src="/bundles/auto/userfiles/{{ a.image }}" alt="{{ a.title }}"/>
                            </div>
                            <h4 class="news_block_title"><a href="#">{{ a.title }}</a></h4>
                            <article>{{ a.description }}</article>
                        </div>
                    {% else %}
                        <h4>Также в акциях</h4>
                        <div>

                        </div>
                    {% endif %}
                {% endif %}
            {% endfor %}
            <br class="clear"/>
        {% else %}
            <p>Акций пока нет!</p>
        {% endif %}

    </div>
</section>